<p id="notice"><%= notice %></p>

<h1>Jobs List</h1>
<br/>
<%= link_to 'Post a New Job', new_job_path, class:'btn btn-success btn-lg' %>
<br/><br/>
<table class='table table-hover'>
  <thead>
    <tr>
      <th>Posted</th>
      <th>Title</th>
      <th>Company name</th>
      <th>Location</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.created_at.to_date %></td>
        <td><%= job.title %></td>
        <td><%= job.company_name %></td>
        <td><%= job.location %></td>
        <td><%= link_to 'Show', job,class:'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Edit', edit_job_path(job),class:'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @jobs, :theme => 'twitter-bootstrap-3' ,:pagination_class => "pagination-sm" %>
<br>

